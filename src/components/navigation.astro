---
export interface Props {
	currentPage: string;
}

let {currentPage} = Astro.props as Props;

---

<div class="header__nav">
    <div class="header__nav-mobile">
    </div>
    <ul class="header__nav-items">
        <li><a class={currentPage === 'home' ? 'active' : ''} href="/">Home</a></li>
        <li><a class={currentPage === 'menu' ? 'active' : ''} href="/menu.html">Menu</a></li>
        <li><a class={currentPage === 'drinks' ? 'active' : ''} href="/drinks.html">Drinks</a></li>
        <li><a class={currentPage === 'specials' ? 'active' : ''} href="/specials.html">Specials</a></li>
        <li><a class={currentPage === 'contact' ? 'active' : ''} href="/contact-us.html">Contact Us</a></li>
    </ul>
</div>
<script>
const headerNav = document.querySelector('.header__nav');

let headerNavItemsWidth = document.querySelector('.header__nav-items').offsetWidth;
let headerNavItemsHeight  = document.querySelector('.header__nav-items').offsetHeight;

document.documentElement.style.setProperty('--header-nav-width', `${headerNavItemsWidth}px`);
document.documentElement.style.setProperty('--header-nav-height', `${headerNavItemsHeight}px`);
if (headerNav) {
    headerNav.addEventListener("click", function(){
        headerNav.classList.toggle('header__nav--active');
    });
}
</script>

<style>
 .header__nav {
    position: relative;
    display: flex;
    flex: 1;
    justify-content: flex-end;
    width: auto;
	height: 100px;
}

.header__nav-items {
    display: flex;
    list-style: none;
}

.header__nav-items li {
	padding: 5px 10px;
	font-size: 1.4em;
}

.header__nav-items li a {
	color: #fff;
	text-decoration: none;
    animation: neon .08s ease-in-out infinite alternate;
}

.header__nav-items li a.active {
	color: var(--logo-lt-purple);
	-webkit-animation: none;
	animation: none;
    animation: neon2 .08s ease-in-out infinite alternate;
}

@media (max-width: 1000px) {
	.header__nav {
		position: relative;
		display: flex;
		flex: 1;
		justify-content: flex-end;
		width: auto;
		height: 100px;
	}

	.header__nav-items {
		display: none;
		opacity: 0;
		transition: 0.5s;
		display: flex;
		flex-direction: column;
		margin-top: calc(-2 * var(--header-nav-height));
	}

	.header__nav--active .header__nav-mobile {
		transform: rotate(180deg);
		box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
		margin-right: var(--header-nav-width);
	}

	.header__nav--active .header__nav-mobile:before {
		top: -9px;
		left: -5px;
		border-radius: 0;
		transform: rotate(135deg);
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0);
	}

	.header__nav--active .header__nav-mobile:after {
		top: 9px;
		left: -5px;
		border-radius: 0;
		transform: rotate(45deg);
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0);
	}

	.header__nav-mobile,
	.header__nav-mobile:before,
	.header__nav-mobile:after {	
		height: 4px;
		width: 30px;  
	}

	.header__nav-mobile {
		transition: 0.5s;
		position: absolute;
		background: var(--logo-lt-purple);
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);  
		margin-top: 30px;
	}

	.header__nav-mobile:before,
	.header__nav-mobile:after {
		content: "";
		position: absolute;
		background: var(--logo-lt-purple);
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
		transition: 0.5s;
	}

	.header__nav-mobile:before {
		top: -8px;
		border-top-left-radius: 16px;
		border-top-right-radius: 16px;
	}

	.header__nav-mobile:after {
		top: 8px;
		border-bottom-left-radius: 16px;
		border-bottom-right-radius: 16px;
	}

	.header__nav--active .header__nav-items {
		display: block;
		opacity: 1;
		margin-right: 0;
		margin-top: 14px;
		padding: 0;
	}
}
@keyframes neon {
  from {
    text-shadow:
    0 0 6px rgba(202,228,225,0.92),
    0 0 30px rgba(202,228,225,0.34),
    0 0 12px rgba(202,228,225,0.52),
    0 0 21px rgba(202,228,225,0.92),
    0 0 34px rgba(202,228,225,0.78),
    0 0 54px rgba(202,228,225,0.92);
  }
  to {
    text-shadow:
    0 0 6px rgba(202,228,225,0.98),
    0 0 30px rgba(202,228,225,0.42),
    0 0 12px rgba(202,228,225,0.58),
    0 0 22px rgba(202,228,225,0.84),
    0 0 38px rgba(202,228,225,0.88),
    0 0 60px rgba(202,228,225,1);
  }
}
@keyframes neon2 {
  from {
    text-shadow:
    0 0 6px rgba(152, 108, 184,0.92),
    0 0 30px rgba(152, 108, 184,0.34),
    0 0 12px rgba(152, 108, 184,0.52),
    0 0 21px rgba(152, 108, 184,0.92),
    0 0 34px rgba(152, 108, 184,0.78),
    0 0 54px rgba(152, 108, 184,0.92);
  }
  to {
    text-shadow:
    0 0 6px rgba(152, 108, 184,0.98),
    0 0 30px rgba(152, 108, 184,0.42),
    0 0 12px rgba(152, 108, 184,0.58),
    0 0 22px rgba(152, 108, 184,0.84),
    0 0 38px rgba(152, 108, 184,0.88),
    0 0 60px rgba(152, 108, 184,1);
  }
}
</style>
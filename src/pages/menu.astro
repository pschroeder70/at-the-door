---
import Layout from '../layout/Layout.astro';
import Logo from '../components/logo.astro';
import Nav from '../components/navigation.astro';
import Specials from '../components/specials.astro';
import DaySpecial from '../components/day-special.astro';
import MenuItem from '../components/menu-item.astro';
import Footer from '../components/footer.astro';

import tacoPic from '../img/taco.jpg';
import beefPic from '../img/beef.jpg';

let currentPage = 'menu';

---

<Layout class="main" title="Leave it at the Door">
	<div class="content">
    <div class="content__one">
      <div class="header">
        <Logo />
        <Nav {currentPage}/>
      </div>
      <h3 class='content__header'>MENU</h3>
      <span class='content__body'>
         
        <div class="menu">
          <div class="menu__column menu__column--apps">
            <h4>Appitizers</h4>
            <MenuItem name="Nachos" price="$12.99" disc="nachos!!  Chix or Beef, OR BOTH!  disc to come." />
            <MenuItem name="Mozz Sticks" price="$9.99" disc="Crispy fried mozzarella cheese, served with a side of marinara sauce" />
            <MenuItem name="Chix Fingers" price="$3.99" disc="It's chicken fingers, come on you know what they are! Get em Buffalo if your spicy." />
            <MenuItem name="Pretzel Sticks" price="$5.99" disc="Warm Bavarian pretzel w/beer cheese for dipping!" />
            <MenuItem name="Egg Rolls" price="$5.25" disc="Actually contains no eggs... but it is rolled & filled with shredded cabbage, pork, and a few other things." />
          </div>
          <div class="menu__column--border"></div>
          <div class="menu__column menu__column--sandies">
            <h4>Handfull</h4>
            <MenuItem name="Smash Burgers" price="$12.99" disc="Not one but two 4oz patties smash to perfection, and served on a toasted bun! Add the toppings you like, or keep it simple with just cheese!*" />
            <MenuItem name="Chix Bacon Ranch Wrap" price="$9.99" disc="Wrights Bacon!!! Marinated chicken, Homemade Ranch dressing w/lettuce & tomato" />
            <MenuItem name="Steak & Cheese" price="$3.99" disc="Thin sliced ribeye, and lots of cheese!!" />
            <MenuItem name="The Bomb!" price="$5.99" disc="Steak & Cheese but add in pepperoni, ham, onions, peppers... good stuff!" />
            <p>* choice of side w/burgers & sandwiches</p>
          </div>
          <div class="menu__column--border2"></div>
            <div class="menu__column menu__column--entrees">
            <h4>Entrees</h4>
            <MenuItem menuItemPic={tacoPic} name="Baked Mac & Cheese" price="$12.99" disc="It's not that stuff that comes with an orange packet!!!" />
            <MenuItem menuItemPic={beefPic} name="Steak Tips" price="$9.99" disc="Tell us how you want them cooked, anything over med-rare is a sin." />
            <MenuItem menuItemPic={tacoPic} name="Spegetti and Meatballs" price="$3.99" disc="Just like mama used to make, if Keri was your mom." />
            <MenuItem menuItemPic={beefPic} name="Meatloaf" price="$5.99" disc="it's meat, it's a loaf... it's good?  Comes with mash & gravy" />
          </div>
          <div class="menu__row menu__row--pizza">
            <h4>Pub Pizza $9.99</h4>
            <h3>Personal sized pizza, additional toppings $1/per</h3>
            <p>Toppings include: pepperoni, onions, green pepper, muchroom, bacon, sausage, tomato, ham</p>
          </div>
          <div class="menu__row menu__row--extra">
            <div>
              <h4>Sauces</h4>
              <ul>
                <li>Buffalo</li>
                <li>Carolina Gold</li>
                <li>Salem Sauce</li>
                <li>Garlic Parm</li>
                <li>BBQ</li>
                <li>Bourbon</li>
              </ul>
            </div>
            <div>
              <h4>Sides</h4>
              <ul>
                <li>Fries</li>
                <li>Hand Cut Wedge Fries</li>
                <li>Onion Rings</li>
                <li>Side Salad</li>
                <li>Rice</li>
                <li>Mashed Potatos w/gravy</li>
              </ul>
            </div>
          
          </div>
        </div>
        <a href='#page-top'>Back to Top</a>
      </span>
    </div>
    <Specials>
      <DaySpecial day='Monday' drink='Keri-rita' food='Bogo Pizza' event='Trivia' />
      <DaySpecial day='Tuesday' drink='Green Juice' food='$2 burger' event='1/2 Price Pool!' />
      <DaySpecial day='Wednesday' drink='$5 Shotz' food='50 Cent Wing' event='Karaoke' />
      <DaySpecial day='Thurday' drink='$2 Draft' food='1/2 price Apps' event='Music Bingo' />
      <DaySpecial day='Friday' drink='1/2 off well drinks' food='Dollar a Rib' event='Karaoke' />
    </Specials>
	</div>
  <Footer />
</Layout>

<style>
.menu {  display: grid;
  grid-template-columns: 1fr 1fr 51px 1fr 1fr 51px 1fr 1fr;
  grid-template-rows: auto auto auto;
  gap: 0px 0px;
  grid-auto-flow: row;
  grid-template-areas:
    "menu__column--apps menu__column--apps menu__column--border menu__column--sandies menu__column--sandies menu__column--border2 menu__column--entrees menu__column--entrees"
    ". menu__row--pizza menu__row--pizza menu__row--pizza menu__row--pizza menu__row--pizza menu__row--pizza ."
    ". menu__row--extra menu__row--extra menu__row--extra menu__row--extra menu__row--extra menu__row--extra .";
}

.menu__column--apps { grid-area: menu__column--apps; }

.menu__column--entrees { grid-area: menu__column--entrees; }

.menu__row--pizza { grid-area: menu__row--pizza; text-align: center;}

.menu__row--extra { grid-area: menu__row--extra; border-top: 1px solid var(--logo-lt-purple); }

.menu__column--sandies { grid-area: menu__column--sandies; }

.menu__column--border { grid-area: menu__column--border; }

.menu__column--border2 { grid-area: menu__column--border2;}

.menu__column--border,
.menu__column--border2 {
  background-color: var(--logo-lt-purple);
  margin: 55% 25px;
}

.menu__row {
  display: flex;
  margin-top: 35px;
}

.menu__row--pizza {
  flex-direction: column;
}
.menu__row--extra {
  flex-direction: row;
  justify-content: space-between;
  padding-top: 35px;
}

  .menu__column h4,
  .menu__row h4 {
    font-size: 1.5em;
    text-align: center;
    margin: 0;
    color: var(--logo-drk-purple);
  }
</style>
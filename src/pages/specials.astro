<style>
  .content {
    display: flex;
    max-width: var(--max-content-width);
    width: 95%;
  }

  .content__one {
    flex: 1;
  }

  .header {
    display: flex;
    align-items: center;
  }

  .content__body-img {
    margin: 7px 25px;
  }

  .content__body-img--left {
    float: left;
    margin-left: 0;
  }

.content__body-img--right {
  float: right;
  margin-right: 0;
}

@media (max-width: 768px) {
  .content {
    flex-direction: column;
  }
}
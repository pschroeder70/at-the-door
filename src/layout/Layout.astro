---
import '../style/styles.css'

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>
</head>
<body>
	<main class='full-size'>
		<slot />
	<main />
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAahQnLy5sv3ZK0pfacCXxigfyNaxDdoCA&callback=initMap&libraries=places&v=weekly" defer></script>
</body>
</html>

<style>
	.full-size {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
    	background: var(--color-bg);
		background-size: cover;
		width: 100%;
		height: auto;
		min-height: 100%;
	}
</style>
